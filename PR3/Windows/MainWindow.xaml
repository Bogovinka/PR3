<Window x:Class="PR3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="20">Авторизация</Label>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
            <StackPanel>
                <Label FontSize="16">Логин:</Label>
                <Label FontSize="16">Пароль:</Label>
            </StackPanel>
            <StackPanel>
                <TextBox FontSize="16" Margin="4" x:Name="login" Width="200"></TextBox>
                <TextBox FontSize="16" Margin="4" x:Name="password" Width="200"></TextBox>
                <Button x:Name="coming" FontSize="16" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,20,0,0" Width="60" Click="coming_Click" >Войти</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
